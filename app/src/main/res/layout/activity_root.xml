<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RootActivity">


    <Button
            android:id="@+id/toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="Start Contributing"
            android:layout_marginBottom="20dp"
            android:background="@drawable/inactive_round_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
    />


    <TextView
            android:id="@+id/data_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@id/toggle_button"
            android:text="0.0"
            android:maxLines="1"
            android:ellipsize="end"
    />


    <TextView
            android:id="@+id/updates_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_below="@id/data_mb"
            android:padding="10dp"
    />






</RelativeLayout>